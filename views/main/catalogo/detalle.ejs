<!DOCTYPE HTML>
<html>
<head>
    <%- include('../../partials/head') %>
    <link rel="stylesheet" href="/css/main/catalogo/header.css">
    <link rel="stylesheet" href="/css/main/catalogo/detalle.css">
    <link rel="stylesheet" href="/css/main/catalogo/detalleQuery.css">
    <link rel="stylesheet" href="/css/main/catalogo/sliderCatalogo.css">
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script src="/js/headerCatalogo.js"></script>
</head>
<body>
    <div class="contenedor-total wrap">
        <!-- HEADER ---------------------------------->
        <%- include('../../partials/catalogo/header') %>
        <!-- HEADER ---------------------------------->
    <section class="page-section detalle contenedor wrap">
        <div class="titulo">
            <h1>Detalle de Art&iacute;culo</h1>
        </div>
        <div class="slider contenedor wrap imagenProd">
            <input type="radio" id="sbutton1" name="sradio">
            <label for="sbutton1" style="background:url(/images/articulos/<%=articulo.linea_id%>/<%=articulo.conGuion()%>.jpg); background-size:100% 100%;"></label>
            <label for="sbutton1" style="background:url(/images/articulos/<%=articulo.linea_id%>/<%=articulo.conGuion()%>A.jpg); background-size:100% 100%;"></label>
            <ul>
                <li>
                    <div class="imgProdDetalle">
                        <img src="/images/articulos/<%=articulo.linea_id%>/<%= articulo.conGuion()%>.jpg" alt="">
                    </div>
                </li>
            </ul>
        </div>
        <div class="contenedor infoProd">
            <h3>Descripci&oacute;n</h3>
            <h1 id="nombreArt"><%= articulo.descripcion %></h1>
            <h3>Caracteristicas</h3>
            <p id="caract"><%= articulo.caracteristicas %></p>
            <h3>Modelos</h3>
            <p id="modelos"><%= articulo.modelos %></p>
            <h3>C&oacute;digo Original</h3>
            <p id="oem"><b>OEM:</b> <%= articulo.oem %></p>
            <h3>C&oacute;digo Altamira</h3>
            <h3 id="codigo"><b></b> <%= articulo.codigo %></h3>
            <div class="contenedor-info wrap">
                <div class="item">
                    <h3 id="precioLista">Precio de lista</h3>
                    <p><b>$<%= articulo.precio / 100 %></b></p>
                </div>
                <div class="item">
                    <h3>Envasado por:</h3>
                    <p><b><%= articulo.unidad_min_vta %></b></p>
                </div>
            </div>
            <div class="item wrap">
                <div class="destacado wrap" style="width: 100%;">
                    <% if (articulo.destacado == 1) { %>
                    <img id="artDest" src="/images/icons/catalogo/destacado.png" alt="">
                    <% } %>
                    <% if (articulo.stock > articulo.unidad_min_vta) { %>
                    <img id="artDest" src="/images/icons/catalogo/disponible.png" alt="">
                    <% } %>
                    <% if (articulo.stock <= articulo.unidad_min_vta) { %>
                    <img id="artDest" src="/images/icons/catalogo/stock.png" alt="">
                    <% } %>
                </div>
            </div>
        </div>
    </section>
</div>
<section class="fondo contenedor-total">
    <div class="page-section footer contenedor wrap">
        <h2 id="tituloFooter">Art&iacute;culos relacionados</h2>
        <% for(let articulo of relacionados){ %>
            <div class="artFooter wrap">
                <div class="fotoArt">
                    <img id="imgProdFoot" src="/images/articulos/<%= articulo.linea_id %>/<%= articulo.codigo.replace('/','-') %>.jpg" alt="">
                </div>
                <h1 id="nombreArtFoot"><%= articulo.descripcion %></h1>
                <p id="modelosFoot"><%= articulo.modelos %></p>
                <p id="oemFoot"><b>OEM:</b> <%= articulo.oem %></p>
                <h3 id="codigoFoot"><b></b> <%= articulo.codigo %></h3>
                <h3 id="precioFoot"><span>$<%= articulo.precio / 100 %></span></h3>
                <a id="" class="detLink" rel="" href="/catalogo/detalle/<%= articulo.id %>">Ver detalle</a>
            </div>
        <% } %> 
    </div>
</section>
</body>
</html>