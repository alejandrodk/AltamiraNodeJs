<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <meta name="googlebot" content="noindex">
    <meta name="robots" content="noindex">
    <!-- CSS-->
    <link rel="stylesheet" href="/css/headerClientes.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel='stylesheet' href='/css/clientes/panel.css'>
    <link rel='stylesheet' href='/css/clientes/comprobantes.css'>
    <script type="text/javascript" src="../../js/complementos/prefixfree.min.js"></script>
</head>

<body>
    <%- include('../partials/clientes/headerClientes') %>
    <div class="container-fluid comprobantes">
        <div class="container body">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <div class="header-item subtitulo">
                        <h3>Seleccione el tipo de comprobante que desea consultar</h3>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <div class="header-item wrap">
                        <div class="buttons wrap">
                            <button id="todos">todos</button>
                            <button id="credito">Crédito</button>
                            <button id="factura">Facturas</button>
                            <button id="debito">Débito</button>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="cuerpo wrap">
                        <div class="contenedor_comp wrap">
                            <div class="titulos wrap">
                                <h3>Tipo de comprobante</h3>
                                <h3>N° de comprobante</h3>
                                <h3>Fecha</h3>
                                <h3>Monto</h3>
                                <h3>Detalle</h3>
                            </div>
                            <div class="tabla_comprobantes wrap" data-cliente="<%= cliente.numero %>">
                                <!-- Se imprimen los datos desde API via FETCH -->
                            </div>
                        </div>
                        <a href="/clientes/perfil" id="volver">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/clientes/footerClientes') %>
    <script src="/js/clientes/header.js"></script>
    <script src="/js/clientes/comprobantes.js"></script>
</body>

</html>